pipeline {
    agent any

    environment {
        JAVA_HOME = '/usr/lib/jvm/java-11'
        PATH = "/usr/lib/jvm/java-11/bin:${env.PATH}"
    }

    stages {
        stage('Checkout') {
            steps {
                echo 'Checking out code from version control'
                checkout scm
                sh 'ls -l' // Debugging step to list files
            }
        }

        stage('Build') {
            steps {
                echo 'Building the project'
                sh './gradlew build'
            }
        }

        stage('Test') {
            steps {
                echo 'Running tests'
                sh './gradlew test'
            }
        }

        stage('Static Code Analysis') {
            steps {
                echo 'Running static code analysis'
                withSonarQubeEnv('SonarQube Server') {
                    sh 'sonar-scanner'
                }
            }
        }

        stage('Package') {
            steps {
                echo 'Packaging the application'
                sh './gradlew assemble'
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying the application'
                withCredentials([sshUserPrivateKey(credentialsId: 'ssh-credentials-id', keyFileVariable: 'SSH_KEY')]) {
                    sh 'scp -i $SSH_KEY build/libs/app.jar user@server:/path/to/deploy'
                }
            }
        }
    }

    post {
        always {
            echo 'Cleaning up workspace'
            cleanWs()
        }

        success {
            echo 'Build completed successfully!'
        }

        failure {
            echo 'Build failed. Sending notification...'
        }
    }
}
